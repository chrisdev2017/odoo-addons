<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>

		<record model="ir.ui.view" id="wizard_fom_view">
            <field name="name">wizard.from</field>
            <field name="model">openacademy.wizard</field>
            <field name="arch" type="xml">
                <form string ="Ajouter des participants">
                    <group>
                        <field name="session_id"/>
                        <field name="attendees_ids"/>
                    </group>
                    <footer>
                        <button name="subscribe" type="object"
                            string="s\'inscrire" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Annuler"/>
                    </footer>
                </form>
            </field>

		</record>


        <act_window id="launch_session_session"
            name="Ajouter des participants"
            src_model="openacademy.session"
            res_model="openacademy.wizard"
            view_mode="form"
            target="new"
            key2="client_action_multi"/>


	</data>
</openerp>