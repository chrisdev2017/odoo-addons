<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>
		<record model="ir.ui.view" id="course_form_view">
			<field name="name">course.form</field>
			<field name="model">openacademy.responsible</field>			
			<field name="arch" type="xml">
				<form string="Responsibles Form">
					<sheet>
						<group>
							<field name="name"/>
							<field name="surname"/>
							<field name="grade"/>
						</group>
						
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="responsible_action">
			<field name="name">Responsables</field>
			<field name="res_model">openacademy.responsible</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Creer le premier responsable</p>
			</field>
		</record>		
	</data>


</openerp>
